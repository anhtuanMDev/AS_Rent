<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBlueTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <!-- Set the border color -->
        <item name="boxStrokeColor">@color/text_input_layout_color_behavior</item>
        <!-- Set the focused border color -->
        <item name="boxStrokeWidth">@dimen/stroke_width</item>
        <item name="hintTextColor">@color/text_input_layout_color_behavior</item>
        <item name="android:textColorHint">@color/lightBlue</item>
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout.Hint</item>
        <!-- Set the corner radius -->
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.CustomCorner</item>
    </style>

    <!-- Custom shape for rounded corners -->
    <style name="ShapeAppearance.CustomCorner" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/medium_corner_round</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout.Hint" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textColor">@color/text_input_layout_color_behavior</item>
    </style>

</resources>
