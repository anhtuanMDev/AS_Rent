<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/medium_gap"
    android:gravity="center_vertical"
    android:paddingVertical="@dimen/small_gap">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/item_delete_person_check_box"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/item_delete_person_txt_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/form_name"
        android:layout_marginHorizontal="@dimen/small_gap"
        android:textSize="@dimen/medium_text"
        android:textStyle="bold" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/big_corner_round">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/item_delete_person_txt_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/md_theme_primary_mediumContrast"
            android:paddingHorizontal="@dimen/small_gap"
            android:paddingVertical="@dimen/tiny_gap"
            android:textColor="@color/md_theme_onPrimary_mediumContrast"
            android:text="@string/detail_people_role_main_house"
            android:textSize="@dimen/small_text"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>




</LinearLayout>