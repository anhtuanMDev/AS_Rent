<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingHorizontal="15dp">

    <com.google.android.material.bottomsheet.BottomSheetDragHandleView
        android:id="@+id/bottomSheetDragHandleView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/bts_img"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:contentDescription="@string/bts_img_description" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bts_edt_electric"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints="200000"
                    android:background="@null"
                    android:hint="@string/bts_edt_electric"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bts_edt_water"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:autofillHints="200000"
                    android:background="@null"
                    android:hint="@string/bts_edt_water"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bts_edt_price"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="200000"
            android:background="@null"
            android:hint="@string/bts_edt_price"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/bts_edt_rooms"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autofillHints="200000"
            android:background="@null"
            android:hint="@string/bts_edt_rooms"
            android:inputType="text" />
    </com.google.android.material.textfield.TextInputLayout>


    <Spinner
        android:id="@+id/bts_spinner"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginVertical="15dp" />

    <Button
        android:id="@+id/bts_btn_finish"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="25dp"
        android:background="@drawable/round_corner_blue"
        android:text="@string/button_finish" />


</LinearLayout>