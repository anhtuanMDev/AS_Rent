<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/large_gap"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/holder_detail_family_member_til_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/medium_gap"
        app:errorEnabled="true">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/holder_detail_family_member_edt_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/form_identification" />


    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/holder_detail_family_member_til_birth"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            app:errorEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/holder_detail_family_member_edt_birth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:hint="@string/form_birth" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/holder_detail_family_member_spinner_gender"
            android:layout_width="120dp"
            android:layout_height="55dp"
            android:layout_marginHorizontal="5dp"/>

        <Spinner
            android:id="@+id/holder_detail_family_member_spinner_relationship"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="55dp"/>

    </LinearLayout>

</LinearLayout>