<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/medium_gap"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/detail_person_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/small_gap">

        <androidx.cardview.widget.CardView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:cardCornerRadius="40dp">

            <ImageView
                android:id="@+id/detail_person_avatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/adult" />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/big_gap"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/detail_person_validate_status"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/detail_people_validate"
                android:textSize="@dimen/big_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/detail_person_validate_date"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/detail_people_validate_date"
                android:textSize="@dimen/big_text"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/big_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/big_corner_round">
                <TextView
                    android:id="@+id/detail_person_role_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/blue"
                    android:paddingHorizontal="@dimen/small_gap"
                    android:text="@string/detail_people_role_main_house"
                    android:textColor="@color/white"
                    android:textSize="@dimen/medium_text"
                    android:textStyle="bold|italic" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/detail_person_name_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/medium_text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_person_birthday"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/form_birth"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/detail_person_birthday_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/medium_text" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_person_identification"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/form_identification"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/detail_person_identification_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/medium_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/detail_person_permanent_resident"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/small_gap"
        android:layout_marginBottom="@dimen/medium_gap"
        android:text="@string/form_permanent_resident"
        android:textSize="@dimen/medium_text" />

    <LinearLayout
        android:id="@+id/detail_person_email_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_person_email"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/form_email"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/detail_person_email_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/medium_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/detail_person_phone_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_person_phoneNumber"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/form_phone"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/detail_person_phoneNumber_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/medium_text" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/detail_person_deposit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_person_deposit"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="@string/detail_people_deposit"
            android:textStyle="bold"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/detail_person_deposit_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/medium_text"
            android:gravity="end"
            app:drawableEndCompat="@drawable/currency" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_person_start_rent"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="@string/detail_people_start_rent"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/detail_person_start_rent_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/medium_text" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/tiny_gap"
        android:layout_marginBottom="@dimen/small_gap"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/detail_person_rent"
            android:layout_width="160dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="@string/detail_people_pay_date"
            android:textSize="@dimen/medium_text" />

        <TextView
            android:id="@+id/detail_person_rent_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:textSize="@dimen/medium_text" />

    </LinearLayout>


</LinearLayout>